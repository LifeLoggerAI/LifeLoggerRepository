
{
  "firestore": {
    "database": "(default)",
    "location": "us-central1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "apphosting": {
    "backendId": "my-web-app",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'self' https://*.cloudworkstations.dev; connect-src 'self' http://localhost:9199 http://localhost:8280 http://localhost:5150 https://*.firebaseio.com https://*.googleapis.com https://*.gstatic.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com ws://localhost:8280; script-src 'self' 'unsafe-inline' https://*.gstatic.com https://*.googleapis.com; style-src 'self' 'unsafe-inline'; img-src * data: blob:; object-src 'none';"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9199,
      "host": "localhost"
    },
    "firestore": {
      "port": 8280,
      "host": "localhost"
    },
    "functions": {
      "port": 5150,
      "host": "localhost"
    },
    "hosting": {
      "port": 5077,
      "host": "localhost"
    },
    "ui": {
      "enabled": true,
      "port": 4405,
      "host": "localhost"
    }
  }
}
