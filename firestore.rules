
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Deny create/delete; handled by Cloud Functions.
      allow create, delete: if false;
    }
    
    // Users can manage their own sub-collections and documents.
    match /voiceEvents/{eventId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /audioEvents/{eventId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /people/{personId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /dreams/{dreamId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.uid;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /faceSnapshots/{snapshotId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.uid;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}
