rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      // Ensure the user is authenticated before checking their UID
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can create, read, and update their own user document.
    // They can also manage all documents in subcollections.
    match /users/{userId}/{documents=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Any other top-level collection follows a simple ownership rule:
    // if a document has a `uid` field, only the owner of that `uid`
    // can access or modify it. This covers collections like `permissions`,
    // `goals`, `tasks`, `voiceEvents`, etc.
    match /{collection}/{docId} {
      // Allow a user to create a document if they are setting their own uid on it.
      allow create: if isOwner(request.resource.data.uid);
      
      // Allow a user to read, update, or delete a document if they are its owner.
      allow read, update, delete: if isOwner(resource.data.uid);
    }
  }
}
