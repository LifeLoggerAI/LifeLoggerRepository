
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can create their own user document when signing up.
    // They can read and update their own user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // This rule applies to all other collections (voiceEvents, dreamEvents, etc.)
    // It enforces that a user can only interact with their own documents.
    match /{collection}/{docId} {
      allow create: if request.auth.uid == request.resource.data.uid;
      allow read, update, delete: if request.auth.uid == resource.data.uid;
    }
  }
}
