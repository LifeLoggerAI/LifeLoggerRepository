
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own document in the 'users' collection.
    // This is the main rule for profile settings and permissions.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows a user to create any document in any collection
    // as long as the document's `uid` field matches their own user ID.
    match /{collection}/{docId} {
        allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // This rule allows a user to read, update, and delete documents in other collections
    // as long as the document's `uid` field matches their own user ID.
    // This covers collections like 'voiceEvents', 'dreamEvents', etc.
    match /{collection}/{docId} {
      allow read, update, delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
  }
}
