
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    // Users can read and update their own profile.
    // Creation is handled by a Cloud Function.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // AUDIO EVENTS
    // Users can manage their own audio events.
    match /audioEvents/{audioEventId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // VOICE EVENTS
    // Users can manage their own voice events.
    match /voiceEvents/{voiceEventId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // PEOPLE
    // Users can manage their own social graph.
    match /people/{personId} {
        allow read, create, update, delete: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // DREAMS
    // Users can manage their own dream entries.
    match /dreams/{dreamId} {
        allow read, create, update, delete: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }
  }
}
