rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all access for safety.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow users to create and manage their own permissions document.
    // This is the critical rule for the current error.
    match /permissions/{userId} {
      allow read, create, update: if request.auth.uid == userId;
    }
    
    // Allow users to manage documents within their own subcollections.
    match /users/{userId}/{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId;
    }

    // For other top-level collections, allow users to create and manage
    // documents that are explicitly associated with their user ID.
    match /{collection}/{docId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
  }
}
