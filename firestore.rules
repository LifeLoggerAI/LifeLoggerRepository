
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User can read/write their own documents in most collections
    match /{collection}/{userId}/{document=**} {
      function isUserOwnedCollection() {
        return collection in [
          'users', 'permissions', 'audioEvents', 'voiceEvents', 'people', 
          'dreams', 'innerTexts', 'faceSnapshots', 'auraStates', 'memoryBlooms', 
          'emotionCycles', 'moodLogs', 'torsoMetrics', 'habitEvents', 
          'narratorInsights', 'legsMetrics', 'movementPaths', 'avoidanceEvents',
          'armMetrics', 'relationalGestures', 'socialContacts', 'socialEvents',
          'timelineEvents', 'shadowEpisodes', 'forecastProfiles', 'archetypeStates',
          'legacyThreads', 'presentMetrics', 'orbState', 'orbEvents', 
          'orbDialogMemory', 'orbSymbolicMap'
        ];
      }
      
      allow read, write: if request.auth != null && request.auth.uid == userId && isUserOwnedCollection();
    }
    
    // B2B collections are admin/function only
    match /anonymizedData/{hashId}/{metricId} {
      allow read, write: if false; // Only backend access
    }
    match /b2bExports/{week}/{reportId} {
      allow read, write: if false; // Only backend access
    }
    
    // Notifications are write-only by backend
    match /notifications/{userId}/{noteId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Functions only
    }
  }
}
