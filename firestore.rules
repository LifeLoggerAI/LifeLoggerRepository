
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Users can create and write their own permissions document
    match /permissions/{userId} {
      allow write: if isOwner(userId);
    }

    // Any other collection where documents have a `uid` field
    // pointing to the owner. This covers almost all other data.
    match /{collection}/{docId} {
      // User can create documents if the new document's uid matches their own.
      allow create: if request.auth.uid == request.resource.data.uid;

      // User can read, update, or delete their own documents.
      allow read, update, delete: if request.auth.uid == resource.data.uid;
    }
  }
}
