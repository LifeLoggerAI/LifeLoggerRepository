rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Specifically allow a user to create and manage their own permissions document.
    match /permissions/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // A broader rule for other collections during development.
    // This allows any authenticated user to read/write to other parts of the database.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
