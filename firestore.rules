
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create their own user doc, and can only read/update/delete their own.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Users can create their own permissions doc, and can only read/update their own.
    match /permissions/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      // On create, check the incoming document's uid matches the authenticated user.
      allow create: if request.auth.uid == userId && request.resource.data.uid == request.auth.uid;
    }

    // Generic rule for user-owned data in top-level collections.
    // This will cover: audioEvents, voiceEvents, dreamEvents, innerTexts,
    // people, goals, tasks, calendarEvents, habitWatch, onboardIntake.
    match /{collection}/{docId} {
      // Allow read, update, delete if the document has a 'uid' field matching the user.
      allow read, update, delete: if request.auth.uid == resource.data.uid;
      // Allow create if the incoming document has a 'uid' field matching the user.
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    // Subcollections under /users
    match /users/{userId}/auraStates/{stateId} {
        allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/memoryBlooms/{bloomId} {
        allow read, write: if request.auth.uid == userId;
    }
  }
}
